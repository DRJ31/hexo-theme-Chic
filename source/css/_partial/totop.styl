#totop 
    background-color #efefef
    border-radius 100%
    bottom 5%
    height 48px
    width 48px
    position fixed
    right -100px
    z-index 99
    -webkit-transition 0.5s
    -moz-transition 0.5s
    transition 0.5s
    &.display 
        right 10px


#totop-percent 
    font-size 16px
    height 48px
    line-height 48px
    position absolute
    text-align center
    top 0
    width 48px
    color #2d96bd
    cursor pointer
    
